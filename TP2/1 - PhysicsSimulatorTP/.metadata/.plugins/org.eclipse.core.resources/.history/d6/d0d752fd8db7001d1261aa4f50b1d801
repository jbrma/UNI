package simulator.model;

import simulator.misc.Vector2D;

public class MovingBody extends Body {

	public MovingBody(String _id, String _gid, Vector2D _p, double _m) {
		super(_id, _gid, new Vector2D(), _p, _m);
		
	}

	@Override
	void advance(double dt) {
		
		Vector2D a = f.scale(1/m);
		
		if (m == 0) {
            a = new Vector2D();
        }
		
        Vector2D newP = p.plus(v.scale(dt)).plus(a.scale(dt*dt*0.5));
        Vector2D newV = v.plus(a.scale(dt));
        p = newP;
        v = newV;
	}
}
