package simulator.model;

import org.json.JSONObject;

import simulator.misc.Vector2D;

public class MovingBody extends Body {

	public MovingBody(String _id, String _gid, Vector2D _v, Vector2D _p, double _m) {
		super(_id, _gid, _v, _p, _m);
		
	}

	@Override
	void advance(double dt) {
		
		Vector2D a = f.scale(1/m);
		
		if (m == 0) {
            a = new Vector2D();
        }
		
        Vector2D newP = p.plus(v.scale(dt)).plus(a.scale(dt*dt*0.5));
        Vector2D newV = v.plus(a.scale(dt));
        p = newP;
        v = newV;
	}
	

    public JSONObject getState() {
        JSONObject obj = new JSONObject();
        obj.put("id", id);
        obj.put("p", p);
        obj.put("v", v);
        obj.put("m", m);
        obj.put("f", f);
        return obj;
    }

    public String toString() {
        return getState().toString();
    }
}
